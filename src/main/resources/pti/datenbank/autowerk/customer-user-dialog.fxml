<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="pti.datenbank.autowerk.controllers.CustomerUserDialogController"
      spacing="10" prefWidth="350" prefHeight="320">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Username"/>
    <TextField fx:id="tfUsername"/>

    <Label text="Password"/>
    <PasswordField fx:id="pfPassword"/>

    <Label text="Email"/>
    <TextField fx:id="tfEmail"/>

    <Label text="Full Name"/>
    <TextField fx:id="tfFullName"/>

    <Label text="Phone"/>
    <TextField fx:id="tfPhone"/>

    <Label text="Address"/>
    <TextField fx:id="tfAddress"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="OK"     onAction="#handleOk"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
